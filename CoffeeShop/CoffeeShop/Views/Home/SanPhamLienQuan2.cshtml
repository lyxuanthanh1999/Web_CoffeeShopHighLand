@{
    ViewBag.Title = "SanPhamLienQuan2";
}

@using CoffeeShop.Models
@model List<ThucDon>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 TinTuc">
            <a style="color:#53382c;font-size:20px;letter-spacing:3px;font-weight:bold; text-align:center;" href="@Url.Action("DetailMon", "Home", new { id = @item.MaMon })">
                @item.TenMon
            </a>
            <img style="width:50%"  src="~/Asset/Images/@item.Hinh"/>
        </div>
    }
</div>
