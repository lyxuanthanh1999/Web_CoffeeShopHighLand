    <!-- Thanh Công Cụ -->
    <script type="text/javascript">
        $(function () {
            $(window).scroll(function () {
                if ($(this).scrollTop() != 0) { $("#ThanhCuon").fadeIn() }
                else { $("#ThanhCuon").fadeOut() }
            });
            $("#ThanhCuon").click(function () {
                $("body,html").animate({ scrollTop: 0 }, 800);
                return false
            })
        });`
    </script>
    <a id='ThanhCuon'>
