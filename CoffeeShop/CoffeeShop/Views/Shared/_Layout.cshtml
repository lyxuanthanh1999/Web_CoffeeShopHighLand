        <div class="item">
            <a href="#">
                <img src="~/Asset/Images/VIET.Brand_Campaign_WEBBANNER.jpg"></a>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            @RenderBody()
        </div>
    </div>

    <!--                         Footer                                           -->
    <div class="container-fluid" style="background-color: #53382c">
        <div class="container">
            <div class="row">
                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 icon_MXH">
                    <ul>
                        <li><a href="https://www.facebook.com/highlandscoffeevietnam/"><i class="fa fa-facebook"></i></a></li>
