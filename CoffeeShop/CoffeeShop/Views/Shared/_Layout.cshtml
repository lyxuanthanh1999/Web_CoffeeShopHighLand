                    <div class="col-12 col-sm-12 col-md-2 col-lg-2 col-xl-2 item"><a href="/Home/TrachNhiemCongDong">TRÁCH NHIỆM CỘNG ĐỒNG</a></div>
                    <div class="col-12 col-sm-12 col-md-2 col-lg-2 col-xl-2 item">
                        @if (Request.Cookies["TaiKhoan"] != null)
                        {
                            <p>Welcome : @Request.Cookies["TaiKhoan"].Value</p>
                            <p>@Html.ActionLink("LogOut", "log", "NguoiDung")</p>
                        }
                        else
                        {
                            <a href="@Url.Action("dangnhap", "NguoiDung")">Đăng Nhập</a>
                            
                        }
                    </div>
                    @*<div class="col-12 col-sm-12 col-md-2 col-lg-2 col-xl-2 item"><a href="/GioHang/GioHang">Giỏ Hàng</a></div>*@
                    @Html.Action("ThongTinGioHang", "GioHang")
                </div>
            </div>
        </div>
    </div>
    <!--                        End Header                                   -->

    <!--                        Banner                                       -->
    <div class="owl-carousel owl-theme" style="background-color: #b22830;">
        <div class="item">
            <a href="#">
                <img src="~/Asset/Images/HCO-7598-20-YEARS-WEBSITE.jpg"></a>
        </div>
        <div class="item">
            <a href="#">
                <img src="~/Asset/Images/VIET.Brand_Campaign_WEBBANNER.jpg"></a>
        </div>
