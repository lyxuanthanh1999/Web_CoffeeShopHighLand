    <!--                   Header                                      -->
    <div class="row" style="background-color: #b22830;">
        <div class="col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3">
            <div class="text-center">
                <a href="/home/index">
                    <img src="~/Asset/Images/1200px-Highlands_Coffee_logo.svg.png" class="w-50" /></a>
