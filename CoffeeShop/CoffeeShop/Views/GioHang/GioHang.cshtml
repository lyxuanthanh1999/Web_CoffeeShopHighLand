@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using CoffeeShop.Models;
@model List<GioHang>
<h2>Thông Tin Giỏ Hàng</h2>
<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
        <table class="table table-striped">
            <tr class="thread thread-dark">
                <td>Tên Món
                </td>
                <td>Ảnh Món
                </td>
                <td>Số Lượng
                </td>
                <td>Đơn Giá
                </td>
                <td>Thành Tiền
                </td>
                <td colspan="3">Tùy Chọn</td>
            </tr>
            @foreach (var item in Model)
            {
                <tr style="text-align: left; font-weight: bold;">
                    <td>
                        @item.tenMon
                    </td>
                    <td style="width: 25%;">
                        <img style="width:30%;" src="~/Asset/Images/@item.anhMon" />
                    </td>
                    @using (@Html.BeginForm("Capnhapgiohang", "GioHang", new { @MaMon = item.maMon }))
                    {
                        <td>
                            <input type="number" min="1" name="txtSoLuong" value="@item.soLuong" />
                        </td>
                        <td>
                            @item.donGia
                        </td>
                        <td>
                            @item.thanhTien
                        </td>
                        <td>
                            <input class="btn btn-primary" type="submit" value="Cập Nhập " />
                        </td>
                        <td>
                            <a class="btn btn-primary" href="@Url.Action("DetailMon", "Home", new { id = item.maMon })">Chi Tiết</a>
                        </td>
                        <td>
                            @Html.ActionLink("Xóa", "Xoagiohang", new { @MaMon = item.maMon })
                        </td>
                    }
                </tr>
            }
            <tr style="font-weight: bold">
                <td colspan="4">Tổng Số Lượng : @ViewBag.TongSoLuong
                </td>
                <td colspan="5">Tổng Tiền : @ViewBag.TongTien VNĐ
                </td>
            </tr>
            <tr style="font-weight: bold; text-decoration: none;">
                <td colspan="6" style="padding: 0 0 600px 600px">
                    @Html.ActionLink("Đặt Hàng", "DatHang", "GioHang")
                </td>
                <td colspan="6"><a class="btn btn-primary" href="@Url.Action("XoaTatCaGioHang", "GioHang")">Xóa Tất Cả Giỏ Hàng</a></td>
            </tr>
        </table>
    </div>
</div>
