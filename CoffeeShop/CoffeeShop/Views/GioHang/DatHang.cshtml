@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using CoffeeShop.Models
@model List<GioHang>
<h2>Đặt Hàng</h2>
<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
        <table class="table table-striped">
            <tr class="thead-dark">
                <td>Tên Món</td>
                <td>Hình Ảnh</td>
                <td>Số Lượng</td>
                <td>Đơn Giá</td>
                <td>Thành Tiền</td>
            </tr>
            @foreach (var item in Model)
            {
                <tr style="text-align: left; font-weight: bold;">
                    <td>
                        @item.tenMon
                    </td>
                    <td style="width: 25%;">
                        <img style="width:30%;" src="~/Asset/Images/@item.anhMon" />
                    </td>
                    @using (@Html.BeginForm("Capnhapgiohang", "GioHang", new { @MaMon = item.maMon }))
                    {
                        <td>
                            <input type="number" min="1" name="txtSoLuong" value="@item.soLuong" />
                        </td>
                        <td>
                            @item.donGia
                        </td>
                        <td>
                            @item.thanhTien
                        </td>
                    }
                </tr>
            }


            <tr style="font-weight: bold">
                <td colspan="4">Tổng Số Lượng : @ViewBag.TongSoLuong
                </td>
                <td colspan="5">Tổng Tiền : @ViewBag.TongTien VNĐ
                </td>
            </tr>
            <tr style="font-weight: bold; text-decoration: none;">
                <td>@Html.ActionLink("Trở về giỏ hàng ", "gioHang", "gioHang")</td>
            </tr>
        </table>
    </div>
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12" style="margin:0 auto;">
        @Html.Partial("ThongTinDatHang", "GioHang")
    </div>
</div>



